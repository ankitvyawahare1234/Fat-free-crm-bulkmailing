= form_for @bmail do |f|
  - if @bmail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bmail.errors.count, "error")} prohibited this bmail from being saved:"
      %ul
        - @bmail.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :to
    = f.text_field :to
  .field
    = f.label :cc
    = f.text_field :cc
  .field
    = f.label :bcc
    = f.text_field :bcc
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
